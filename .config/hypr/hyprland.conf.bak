#
# Please note not all available settings / options are set here.
# For a full list, see the wiki
#

# autogenerated = 1 # remove this line to remove the warning

# See https://wiki.hyprland.org/Configuring/Monitors/
# monitor=eDP-1,1920x1080@120,0x0,1
monitor=eDP-1,2256x1504,0x0,1


# See https://wiki.hyprland.org/Configuring/Keywords/ for more

# Execute your favorite apps at launch
# exec-once = waybar & hyprpaper & firefox

# Source a file (multi-file configs)
# source = ~/.config/hypr/myColors.conf

# Some default env vars.
env = XCURSOR_SIZE,24

# Notification
exec-once=dunst
# TODO wallpaper
exec-once=swaybg -o \* -i ~/.config/hypr/wallpaper/background.jpg -m fill

# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout = us
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =
    repeat_rate = 20
    repeat_delay = 150

    follow_mouse = 1

    natural_scroll = yes

    touchpad {
        natural_scroll = yes
        clickfinger_behavior = 1
        middle_button_emulation = 1
        tap-to-click = 1
        tap-and-drag = 1
    }

    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
}

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 5
    gaps_out = 20
    border_size = 3
    col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.inactive_border = rgba(595959aa)

    resize_on_border = true
    hover_icon_on_border = true

    layout = dwindle
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    # radius
    rounding = 2

    active_opacity = 0.95
    inactive_opacity =  0.85

    blur {
        enabled = true
        size = 6
        passes = 1
    }

    drop_shadow = no
    shadow_range = 4
    shadow_render_power = 3
    col.shadow = rgba(1a1a1aee)
}


# Blur for waybar
blurls=waybar
blurls=lockscreen

animations {
    enabled = yes

    # Some default animations, see https://wiki.hyprland.org/Configuring/Animations/ for more

    bezier = myBezier, 0.05, 0.9, 0.1, 1.05

    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 80%
    animation = border, 1, 10, default
    animation = borderangle, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 6, default
    animation = specialWorkspace, 1, 12, default, slidevert
}

dwindle {
    # See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
    default_split_ratio = 0.7
    use_active_for_splits = true
}

master {
    # See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
    new_is_master = false
}

gestures {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    workspace_swipe = on
}

misc {
    disable_hyprland_logo = true
    disable_splash_rendering = true
    animate_manual_resizes = true
    animate_mouse_windowdragging = true
}

# Example per-device config
# See https://wiki.hyprland.org/Configuring/Keywords/#executing for more
device:epic-mouse-v1 {
    sensitivity = -0.5
}

# Check hyprctl clients | nvim -
windowrule=tile,^(Alacritty)$
# Example windowrule v1
# windowrule = float, ^(kitty)$
# Example windowrule v2
# windowrulev2 = float,class:^(kitty)$,title:^(kitty)$
# See https://wiki.hyprland.org/Configuring/Window-Rules/ for more

# https://github.com/xkbcommon/libxkbcommon/blob/master/include/xkbcommon/xkbcommon-keysyms.h
# https://wiki.hyprland.org/Configuring/Variables/#variable-types
# https://wiki.hyprland.org/Configuring/Dispatchers/#list-of-dispatchers
# See https://wiki.hyprland.org/Configuring/Keywords/ for more
$mainMod = SUPER

# Example binds, see https://wiki.hyprland.org/Configuring/Binds/ for more
bind = $mainMod,       T, exec, foot -e 'shell_dashboard.py'
bind = $mainMod,       Q, killactive,
bind = $mainMod,       a, layoutmsg, addmaster
bind = $mainMod,       r, layoutmsg, addmaster
bind = $mainMod,       M, fullscreen,
bind = $mainMod SHIFT, E, exit,
bind = $mainMod,       f, togglefloating,
bind = $mainMod,   Space, exec, wofi --show drun
bind = $mainMod,       d, exec, wofi --show run
bind = $mainMod, SHIFT P, pseudo, # dwindle
bind = $mainMod,       v, togglesplit, # dwindle

# Move focus with mainMod + arrow keys
bind = $mainMod, h, movefocus, l
bind = $mainMod, l, movefocus, r
bind = $mainMod, k, movefocus, u
bind = $mainMod, j, movefocus, d


bind = $mainMod SHIFT, h, movewindow, l
bind = $mainMod SHIFT, l, movewindow, r
bind = $mainMod SHIFT, k, movewindow, u
bind = $mainMod SHIFT, j, movewindow, d


bind = $mainMod ALT, n, cyclenext

bind = $mainMod, Return, bringactivetotop
bind = $mainMod SHIFT, Return, exec, alacritty
bind = $mainMod SHIFT, Tab, focusurgentorlast
bind = $mainMod SHIFT, r, forcerendererreload
bind = $mainMod SHIFT, o, toggleopaque



# Switch workspaces with mainMod + [0-9]
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move active window to a workspace with mainMod + SHIFT + [0-9]
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Scroll through existing workspaces with mainMod + scroll
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

bind = $mainMod, p, workspace, r+1
bind = $mainMod, n, workspace, r-1
bind = $mainMod, Tab, workspace, previous

bind = $mainMod SHIFT,       p, focusmonitor, +1
bind = $mainMod SHIFT,       n, focusmonitor, -1
bind = $mainMod,             w, swapactiveworkspaces, current -1
bind = $mainMod,             slash, exec, dash /home/ryan/.config/hypr/window_switcher.sh

# Move/resize windows with mainMod + LMB/RMB and dragging
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow
# Resize (This caused issues)
# bind = $mainMod ALT, l, resizewindowpixel, (-10 0)
# bind = $mainMod ALT, h, resizewindowpixel, (+10 0)
# bind = $mainMod ALT, j, resizewindowpixel, (0 +10)
# bind = $mainMod ALT, k, resizewindowpixel, (0 -10)

# Toggle waybar
bind = $mainMod,       b, exec, pkill waybar || waybar

# Layout Change
# TODO this isn't working, but it does on Ryan's
# From https://www.reddit.com/r/hyprland/comments/12x9724/how_do_i_make_a_bind_to_switch_between/
bind = SUPERCTRL, K, exec, hyprctl keyword general:layout "dwindle"
bind = SUPERCTRL, J, exec, hyprctl keyword general:layout "master"

# TODO suspend

# TODO scratchpad
bind = SUPER, S, movetoworkspace, special
bind = SUPER, grave, togglespecialworkspace,

#The above syntax will move the window to a special workspace upon pressing 'SUPER'+'C'.
#To see the hidden window you can use the togglespecialworkspace dispatcher mentioned above.

# master layout
bind = $mainMod, Return, layoutmsg, swapwithmaster

# TODO unchecked - I don't have an adaptor
# Between monitors
bind = $mainMod SHIFT,       W, movecurrentworkspacetomonitor,
bind = $mainMod,       W, swapactiveworkspaces ,


# TODO agenda workspace
bind = SUPERSHIFT, A, exec, [workspace special:agenda] emacs --eval '(org-agenda nil "a")' || emacs --daemon
bind = SUPER, A, togglespecialworkspace, agenda

# TODO messenger workspace
workspace = special:message, on-created-empty: element-desktop
bind = $mainMod, Z, togglespecialworkspace, message

# TODO groups
bind = ALT, T, togglegroup,
bind = ALT, p, changegroupactive, b
bind = ALT, n, changegroupactive, f
