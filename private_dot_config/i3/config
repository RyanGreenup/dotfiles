# move focused workspace between monitors
  #you can define a binding in your i3 config. Note: windows are called
  #"containers", and monitors are called "outputs". move workspace to output
  #left|right|down|up|current|primary|<output>
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left



bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Right workspace next_on_output
bindsym $mod+Down workspace next_on_output
bindsym $mod+Left workspace prev_on_output
bindsym $mod+Up workspace prev_on_output




