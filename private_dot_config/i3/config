 bindsym $mod+d exec rofi -show drun lines 10 -eh 2 -mathing fuzzy -show-icons -theme Pop-Dark -padding 1600
 bindsym $mod+space exec rofi -show drun lines 10 -eh 2 -mathing fuzzy -show-icons -theme Pop-Dark -padding 1600
 # bindsym $mod+slash exec rofi -show window lines 10 -eh 2 -mathing fuzzy -show-icons -theme-str 'element-icon \{ size: 4ch;\}'
 bindsym $mod+slash exec rofi -show window lines 10 -eh 2 -mathing fuzzy -show-icons  -theme Pop-Dark

 bindsym $mod+c  exec rofi -show calc -modi calc -no-show-match -no-sort -theme Pop-Dark





